{
  "version": 2,
  "builds": [
    {
      "src": "BE/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "FE/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "BE/app.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/dist/assets/$1"
    },
    {
      "src": "/(.*\\.(ico|png|jpg|jpeg|svg|gif|js|css|map|txt))",
      "dest": "/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    }
  ]
}
